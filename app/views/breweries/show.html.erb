<p id="notice"><%= notice %></p>
<% cache @brewery do %>
<h2><%= @brewery.name %>
  <% if not @brewery.active  %>
      <span class="label label-info">retired</span>
  <% end %>
</h2>

<p>
  <strong>Established at
  <%= @brewery.year %></strong>
</p>
<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post %> <br>

<%= link_to 'Edit', edit_brewery_path(@brewery) %>
<br><br>
<% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
<% end %>
<br>
 <strong>Number of beers: <%= @brewery.beers.count%></strong>
<br>
<% end %>
<% if @brewery.ratings.empty? %>
    Brewerys beers have not yet been rated!
<% else %>
    Has <%= pluralize(@brewery.ratings.count, 'rating')  %>, average: <%=  @brewery.average_rating %>
<% end %>
<br>