<p id="notice"><%= notice %></p>

<p>
  <strong><%= @user.username %></strong>
</p>

<p>has made <%= @user.ratings.count %> ratings, average rating <%= @user.average_rating %></p>
<p>Favorite style is  <%= @user.favorite_style %></p>
<p>favorite brewery is <%= @user.favorite_brewery %></p>
<p>favorite beer is <%= @user.favorite_beer %></p>

<p>
  <strong>ratings</strong>
  <ul>
    <% @user.ratings.each do |rating| %>

    <li> <%= rating %>
      <% if @user == current_user %>
          <%= link_to 'Delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          </li>
    <% end %>
  </ul>
</p>

<p>
  <strong>beerclubs</strong>
<ul>
  <% @user.beer_clubs.each do |b| %>
      <li> <%= link_to b.name, b %> </li>
  <% end %>
</ul>
</p>
<% if @user == current_user %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
